CC = @CC@
CFLAGS = @CFLAGS@ -fPIC -Wportability -O6 -std=gnu99
CXXFLAGS = @CXXFLAGS@ -fPIC -Wportability -O6

# Get flags for R
R_CPPFLAGS = @R_CPPFLAGS@
R_LDFLAGS = @R_LDFLAGS@

# Get flags for Rcpp
RCPP_CXXFLAGS = @RCPP_CXXFLAGS@
RCPP_LIBS = @RCPP_LIBS@


OCT_SOURCES = Rrng.cc RcppOctave.cc
OCT_OBJECTS = utils.oct $(OCT_SOURCES:.cc=.oct)

.SUFFIXES: .cc .oct

all: $(OCT_OBJECTS)

utils.oct: utils.cc
	"@OCTAVE_MKOCTFILE@" -v utils.cc

RcppOctave.oct: RcppOctave.cc
	"@OCTAVE_MKOCTFILE@" -o RcppOctave.oct -v ${R_CPPFLAGS} ${RCPP_CXXFLAGS} ${R_LDFLAGS} ${RCPP_LIBS} \
	-L"${R_LIBRARY_DIR}/${R_PACKAGE_NAME}/libs" \
	../rcpp_octave.o ../conversion.o RcppOctave.cc

.cc.oct:
	"@OCTAVE_MKOCTFILE@" -v ${R_CPPFLAGS} ${R_LDFLAGS} $<
	
clean:
	rm -vf *.o *~
	
clean-all: clean
	rm -vf *.oct
