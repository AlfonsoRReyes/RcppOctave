## Use the R_HOME indirection to support installations of multiple R version

# To avoid warnings with Octave C99 syntax
CXX_STD = CXX11

# set by configure
OCT_LDFLAGS=@OCT_LDFLAGS@
OCT_CPPFLAGS=@OCT_CPPFLAGS@
OCT_MODULES_PATH=@OCT_MODULES_PATH@
OCT_BINDIR=@OCTAVE_BINDIR@
OCTAVE_CUSTOMED=@OCTAVE_CUSTOMED@
RSCRIPT_BIN=@RSCRIPT_BIN@
#RSCRIPT_BIN="$(R_HOME)/bin$(R_ARCH_BIN)/Rscript"

@OCTAVE_PATH_ADD@

## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = `$(RSCRIPT_BIN) -e "Rcpp:::LdFlags()"` $(OCT_LDFLAGS)
PKG_CPPFLAGS = `$(RSCRIPT_BIN) -e "Rcpp:::CxxFlags()"` $(OCT_CPPFLAGS)

.PHONY: OctaveModule

$(SHLIB): OctaveModule

OctaveModule:
	@cd modules && \
	$(MAKE) CC="$(CC)" CXX="$(CXX)" AR="$(AR)" RANLIB="$(RANLIB)" && \
	echo "# Copying Octave modules to directory '$(OCT_MODULES_PATH)'" && \
	mkdir -p "$(OCT_MODULES_PATH)" && \
	cp -f PKG_ADD *.oct "$(OCT_MODULES_PATH)";

clean:
	rm *.o;
	cd modules && $(MAKE) clean;

clean-all: clean
	rm $(SHLIB);
	cd modules && $(MAKE) clean-all;

